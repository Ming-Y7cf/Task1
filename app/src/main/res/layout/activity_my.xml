<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyActivity">

    <RelativeLayout
        android:id="@+id/my_R_"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        >

        <RelativeLayout
            android:id="@+id/my_R_up"
            android:layout_width="match_parent"
            android:layout_height="210dp">
            <ImageView
                android:id="@+id/my_R_up_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/my1"
                android:layout_marginTop="20dp"
                android:clickable="true"
               >
            </ImageView>
            <TextView
                android:id="@+id/my_R_up_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/my_R_up_img"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="nickname"
                android:textSize="30dp"
                android:textColor="#4054B3"
                android:clickable="true">
            </TextView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/my_R_down"
            android:layout_below="@+id/my_R_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/my_R_down_B_cars"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我的车辆"
                android:textSize="30dp"/>

            <Button
                android:id="@+id/my_R_down_B_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我的积分"
                android:textSize="30dp"
                android:layout_below="@id/my_R_down_B_cars"/>

            <Button
                android:id="@+id/my_R_down_B_appointment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我的预约"
                android:textSize="30dp"
                android:layout_below="@id/my_R_down_B_score"/>

            <Button
                android:id="@+id/my_R_down_B_record"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我的记录"
                android:textSize="30dp"
                android:layout_below="@id/my_R_down_B_appointment"/>

            <Button
                android:id="@+id/my_R_down_B_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="问题反馈"
                android:textSize="30dp"
                android:layout_below="@id/my_R_down_B_record"/>

            <Button
                android:id="@+id/my_R_down_B_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="设置"
                android:textSize="30dp"
                android:layout_below="@id/my_R_down_B_feedback"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/main_Down_bottom"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/change_bottom_B_tomain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主页"
                android:background="#ffffff"
                android:textColor="#000000"
                android:textSize="30dp"/>
            <Button
                android:id="@+id/change_bottom_B_tomy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="#ffffff"
                android:textColor="#000000"
                android:text="我的"
                android:textSize="30dp"/>
        </RelativeLayout>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>