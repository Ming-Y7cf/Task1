<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".appoint_sure"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:background="#D1CECE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/appoint_sure_back"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:background="@mipmap/back"
                android:textColor="#000000" />
            <TextView
                android:id="@+id/appoint_sure_textView_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预约"
                android:layout_gravity="center"
                android:layout_marginLeft="110sp"
                android:textColor="#000000"
                android:textSize="30dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预约单"
                android:textSize="30sp"
                android:textColor="#242323"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓  名:"
                android:textSize="30sp"
                android:textColor="#000000">
            </TextView>
            <EditText
                android:id="@+id/appoint_sure_ET_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入联系人名称"
                android:textSize="30sp"
                android:textColorHint="#615D5D"
                android:textColor="#000000"
                android:inputType="text"
                android:singleLine="true"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地  址:"
                android:textSize="30sp"
                android:textColor="#000000">
            </TextView>
            <EditText
                android:id="@+id/appoint_sure_ET_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入联系人地址"
                android:textSize="30sp"
                android:textColorHint="#615D5D"
                android:textColor="#000000"
                android:singleLine="true"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电  话:"
                android:textSize="30sp"
                android:textColor="#000000">
            </TextView>
            <EditText
                android:id="@+id/appointsure_ET_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入联系人电话"
                android:textSize="30sp"
                android:textColorHint="#615D5D"
                android:textColor="#000000"
                android:inputType="number"
                android:singleLine="true"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/appointsure_TV_top1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预约服务:"
                android:textColor="#1D1C1C"
                android:textColorHint="#000000"
                android:textSize="30dp" />
            <TextView
                android:id="@+id/appoint_sure_TV_Atype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:layout_marginLeft="50sp"
                android:textSize="30dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务方式:"
                android:textSize="30sp"
                android:textColor="#000000">
            </TextView>
            <TextView
                android:id="@+id/appoint_sure_TV_Away"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="点击选择服务方式"
                android:textSize="30sp"
                android:textColorHint="#615D5D"
                android:textColor="#000000"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务时间:"
                android:textSize="30sp"
                android:textColor="#000000">
            </TextView>
            <TextView
                android:id="@+id/appoint_sure_TV_Atime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="点击选择服务时间"
                android:textSize="30sp"
                android:textColorHint="#615D5D"
                android:textColor="#000000"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20sp">
            <Button
                android:id="@+id/appoint_sure_submit"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:background="#D1CECE"
                android:text="提   交"
                android:textSize="30sp"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>