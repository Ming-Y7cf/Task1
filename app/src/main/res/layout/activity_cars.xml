<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CarsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical">
        <LinearLayout
            android:background="#D1CECE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/cars_B_back"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:background="@mipmap/back"
                android:textColor="#000000" />
            <TextView
                android:id="@+id/cars_TV_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车辆管理"
                android:layout_gravity="center"
                android:layout_marginLeft="90sp"
                android:textColor="#000000"
                android:textSize="30dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#E6E2E2"
            android:layout_margin="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="30sp"
                android:text="我的车辆数为："/>
            <TextView
                android:id="@+id/cars_TV_carsnum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cars_LY_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#E6E2E2"
            android:padding="10sp"
            android:layout_marginTop="10sp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/my1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="210sp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="车主:"
                            android:textColor="#000000"
                            android:textSize="30sp"/>
                        <TextView
                            android:id="@+id/cars_1_userid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="XX"
                            android:textColor="#000000"
                            android:textSize="30sp"
                            android:layout_marginLeft="20sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="车牌号:"
                            android:textColor="#000000"
                            android:textSize="30sp"/>
                        <TextView
                            android:id="@+id/cars_1_Mid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="XX"
                            android:textColor="#000000"
                            android:textSize="30sp"
                            android:layout_marginLeft="20sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="使用:"
                            android:textColor="#000000"
                            android:textSize="30sp"/>
                        <TextView
                            android:id="@+id/cars_1_years"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="XX"
                            android:textColor="#000000"
                            android:textSize="30sp"
                            android:layout_marginLeft="20sp"/>
                    </LinearLayout>
                </LinearLayout>
                <Button
                    android:id="@+id/cars_1_change"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:background="@mipmap/change2"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/cars_LY_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#E6E2E2"
            android:padding="10sp"
            android:layout_marginTop="10sp">
            <ImageView
                android:layout_width="120sp"
                android:layout_height="120sp"
                android:src="@mipmap/my4"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="210sp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="车主:"
                            android:textColor="#000000"
                            android:textSize="30sp"/>
                        <TextView
                            android:id="@+id/cars_2_userid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="XX"
                            android:textColor="#000000"
                            android:textSize="30sp"
                            android:layout_marginLeft="20sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="车牌号:"
                            android:textColor="#000000"
                            android:textSize="30sp"/>
                        <TextView
                            android:id="@+id/cars_2_Mid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="XX"
                            android:textColor="#000000"
                            android:textSize="30sp"
                            android:layout_marginLeft="20sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="使用:"
                            android:textColor="#000000"
                            android:textSize="30sp"/>
                        <TextView
                            android:id="@+id/cars_2_years"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="XX"
                            android:textColor="#000000"
                            android:textSize="30sp"
                            android:layout_marginLeft="20sp"/>
                    </LinearLayout>
                </LinearLayout>
                <Button
                    android:id="@+id/cars_2_change"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:background="@mipmap/change2"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120sp"
            android:layout_marginTop="10sp"
            android:padding="10sp"
            android:background="#E6E2E2"
            android:orientation="vertical">
            <Button
                android:id="@+id/cars_B_addcars"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:background="@mipmap/add"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/cars_TV_addcars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加车辆"
                android:textColor="#000000"
                android:textSize="30sp"
                android:layout_gravity="center" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>