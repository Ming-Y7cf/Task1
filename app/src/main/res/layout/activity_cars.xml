<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CarsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical">
        <LinearLayout
            android:background="#D1CECE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/cars_B_back"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:background="@mipmap/back"
                android:textColor="#000000" />
            <TextView
                android:id="@+id/cars_TV_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车辆管理"
                android:layout_gravity="center"
                android:layout_marginLeft="90sp"
                android:textColor="#000000"
                android:textSize="30dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#E6E2E2"
            android:padding="10sp"
            android:layout_marginTop="10sp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/my1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="雅迪电动车"
                            android:textColor="#000000"
                            android:textSize="30sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="2.5年"
                            android:textColor="#000000"
                            android:textSize="30sp"/>
                    </LinearLayout>
                    <Button
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:background="@mipmap/change2"
                        android:layout_marginLeft="40sp"
                        android:layout_gravity="center"/>

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="车主:123456789"
                    android:textColor="#000000"
                    android:textSize="30sp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#E6E2E2"
            android:padding="10sp"
            android:layout_marginTop="10sp">
            <ImageView
                android:layout_width="120sp"
                android:layout_height="120sp"
                android:src="@mipmap/my4"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="爱玛电动车"
                            android:textColor="#000000"
                            android:textSize="30sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="1.2年"
                            android:textColor="#000000"
                            android:textSize="30sp"/>
                    </LinearLayout>
                    <Button
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:background="@mipmap/change2"
                        android:layout_marginLeft="40sp"
                        android:layout_gravity="center"/>

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="车主:987654321"
                    android:textColor="#000000"
                    android:textSize="30sp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120sp"
            android:layout_marginTop="10sp"
            android:padding="10sp"
            android:background="#E6E2E2"
            android:orientation="vertical">
            <Button
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:background="@mipmap/add"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加车辆"
                android:textColor="#000000"
                android:textSize="30sp"
                android:layout_gravity="center" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>